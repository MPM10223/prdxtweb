extends layout

block content
	div.navbar.navbar-inverse.navbar-fixed-top
		div.navbar-inner
			div.container
				button.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
					span.icon-bar
					span.icon-bar
					span.icon-bar
			div.nav-collapse.collapse
				ul.nav
					li.active
						if global.session.userID > 0
							a(href='/start') Home
						else
							a(href='/home') Home
					li
						a(href='/about') About
					li
						a(href='/contact') Contact
	div.main-container.table
		div.logo-box.column
			img(src='/images/prdxt_logo.png', width='80px;')
		div#breadcrumbs.column
			block breadcrumbs
		div.bookend
		div#indexContent.container
			block pageContent