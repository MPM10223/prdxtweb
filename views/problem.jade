extends index

block breadcrumbs
	ul.breadcrumb
		li
			a(href="/start") Problems
			span.divider /
		li.active #{problemName}

block pageContent
	h3 #{problemName}
	div.progress
		div.bar(style="width: 0%;")
	table.table.table-hover
		caption
		thead
			tr
				th Predictive Algorithm
				th Status
				th Progress
				th Score
		tbody
			each job in jobsList
				tr
					if job.modelID == ''
						td #{job.algoName}
					else
						td
							a(href="/model?modelID=#{job.modelID}") #{job.algoName}
					if job.build_status != 'Completed'
						td Building #{job.build_status}
					else
						td Evaluation #{job.eval_status}
					td
						if job.build_progress < 1 || job.eval_progress < 1
							div.progress.progress-striped.active
								div.bar(style="width: #{(job.build_progress + job.eval_progress) / 2 * 100.0}%")
						else
							div.progress.progress-striped
								div.bar(style="width: #{(job.build_progress + job.eval_progress) / 2 * 100.0}%")
					td #{job.accuracy}